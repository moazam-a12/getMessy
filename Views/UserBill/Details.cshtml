@model Bill

@{
    ViewBag.Title = "Bill Details";
    var attendances = ViewBag.Attendances as List<Attendance>;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-white text-gray-900 min-h-screen">

    <partial name="_TopNavbar" />
    <partial name="_SideDrawer" />

    <!-- Main Container -->
    <div class="pt-16">

            <!-- Header -->
            <header class="bg-white border-b border-gray-200 px-8 py-6">
                <div class="flex items-center justify-between">
                    <div>
                        <h1 class="text-4xl font-extrabold text-gray-900">
                            Bill Details
                        </h1>
                        <p class="text-gray-600 mt-2 text-lg">Detailed breakdown of your monthly bill</p>
                    </div>
                </div>
            </header>

            <!-- Page Content -->
            <main class="flex-1 overflow-y-auto p-8">
                <div class="max-w-5xl mx-auto">

                    <!-- Bill Summary Card -->
                    <div class="bg-white rounded-lg shadow-sm p-8 mb-10 border border-gray-200">
                        <div class="flex justify-between items-start mb-8">
                            <div>
                                <h2 class="text-2xl font-semibold text-gray-900 mb-2">Invoice #@Model.Id</h2>
                                <p class="text-gray-600 text-sm">Bill Period: @Model.Date.ToString("MMMM yyyy")</p>
                                <p class="text-gray-500 text-sm">Generated on: @Model.Date.ToString("MMM dd, yyyy")</p>
                            </div>
                            <div class="text-right">
                                @if (Model.Paid)
                                {
                                    <span class="inline-flex items-center px-6 py-2 rounded-full text-sm font-medium bg-green-100 text-green-800 border border-green-300">
                                        <i class="fas fa-check-circle mr-2"></i> PAID
                                    </span>
                                }
                                else
                                {
                                    <span class="inline-flex items-center px-6 py-2 rounded-full text-sm font-medium bg-red-100 text-red-800 border border-red-300">
                                        <i class="fas fa-clock mr-2"></i> UNPAID
                                    </span>
                                }
                            </div>
                        </div>

                        <hr class="border-gray-200 my-6">

                        <!-- User Info -->
                        <div class="mb-8">
                            <h3 class="text-sm font-semibold text-gray-600 mb-2 uppercase tracking-wide">Bill To:</h3>
                            <p class="text-lg font-medium text-gray-900">@Model.User.FullName</p>
                            <p class="text-sm text-gray-600">@Model.User.Email</p>
                        </div>

                        <!-- Summary Stats -->
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                            <div class="bg-amber-50 rounded-lg p-6 border border-amber-200">
                                <p class="text-amber-900 text-xs font-semibold uppercase tracking-wide mb-2">Food Items</p>
                                <p class="text-2xl font-semibold text-gray-900">@ViewBag.FoodCount</p>
                                <p class="text-amber-700 text-sm mt-2">Rs @ViewBag.FoodTotal.ToString("N2")</p>
                            </div>

                            <div class="bg-emerald-50 rounded-lg p-6 border border-emerald-200">
                                <p class="text-emerald-900 text-xs font-semibold uppercase tracking-wide mb-2">Drink Items</p>
                                <p class="text-2xl font-semibold text-gray-900">@ViewBag.DrinkCount</p>
                                <p class="text-emerald-700 text-sm mt-2">Rs @ViewBag.DrinkTotal.ToString("N2")</p>
                            </div>

                            <div class="bg-blue-50 rounded-lg p-6 border border-blue-200">
                                <p class="text-blue-900 text-xs font-semibold uppercase tracking-wide mb-2">Total Amount</p>
                                <p class="text-2xl font-semibold text-gray-900">Rs @Model.Amount.ToString("N2")</p>
                            </div>
                        </div>
                    </div>

                    <!-- Attendance Breakdown -->
                    <div class="bg-white rounded-lg shadow-sm p-8 mb-10 border border-gray-200">
                        <h3 class="text-xl font-semibold text-gray-900 mb-6">Attendance Breakdown</h3>

                        @if (attendances != null && attendances.Count > 0)
                        {
                            <div class="overflow-x-auto">
                                <table class="min-w-full divide-y divide-gray-200">
                                    <thead class="bg-gray-50">
                                        <tr>
                                            <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase">Date</th>
                                            <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase">Item</th>
                                            <th class="px-6 py-4 text-center text-xs font-semibold text-gray-600 uppercase">Type</th>
                                            <th class="px-6 py-4 text-right text-xs font-semibold text-gray-600 uppercase">Price</th>
                                        </tr>
                                    </thead>
                                    <tbody class="divide-y divide-gray-200">
                                        @foreach (var attendance in attendances)
                                        {
                                            <tr class="hover:bg-gray-50 transition-all duration-200">
                                                <td class="px-6 py-4 text-gray-700 text-sm">
                                                    @attendance.Menu.Date.ToString("MMM dd, yyyy")
                                                </td>
                                                <td class="px-6 py-4">
                                                    <div class="flex items-center gap-3">
                                                        <i class="@(attendance.Menu.IsFood ? "fas fa-hamburger" : "fas fa-mug-hot") text-lg text-gray-600"></i>
                                                        <span class="font-medium text-gray-900">@attendance.Menu.Name</span>
                                                    </div>
                                                </td>
                                                <td class="px-6 py-4 text-center">
                                                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium @(attendance.Menu.IsFood ? "bg-amber-100 text-amber-800 border border-amber-200" : "bg-green-100 text-green-800 border border-green-200")">
                                                        @(attendance.Menu.IsFood ? "Food" : "Drink")
                                                    </span>
                                                </td>
                                                <td class="px-6 py-4 text-right text-sm font-medium text-gray-900">
                                                    Rs @attendance.Menu.Price.ToString("N2")
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot class="bg-gray-50 border-t border-gray-200">
                                        <tr>
                                            <td colspan="3" class="px-6 py-4 text-right text-sm font-semibold text-gray-900">
                                                Total Amount:
                                            </td>
                                            <td class="px-6 py-4 text-right text-sm font-semibold text-gray-900">
                                                Rs @Model.Amount.ToString("N2")
                                            </td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-12">
                                <i class="fas fa-receipt text-4xl text-gray-300 mb-4"></i>
                                <p class="text-gray-600 text-sm">No attendance records found for this billing period.</p>
                            </div>
                        }
                    </div>

                    <!-- Action Buttons -->
                    <div class="flex flex-wrap justify-center gap-4">
                        @if (!Model.Paid)
                        {
                            <form method="post" asp-controller="Payment" asp-action="CreateCheckoutSession" asp-route-billId="@Model.Id" class="inline">
                                <button type="submit"
                                        class="inline-flex items-center px-6 py-3 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-all duration-200 shadow-sm text-sm font-medium">
                                    <i class="fas fa-credit-card mr-2"></i>
                                    Pay Now
                                </button>
                            </form>
                        }

                        <a href="@Url.Action("DownloadInvoice", new { id = Model.Id })"
                           onclick="window.open(this.href, '_blank'); return false;"
                           class="inline-flex items-center px-6 py-3 bg-gray-900 text-white rounded-lg hover:bg-gray-800 transition-all duration-200 shadow-sm text-sm font-medium">
                            <i class="fas fa-file-download mr-2"></i>
                            Download PDF
                        </a>
                    </div>

                </div>
            </main>

    </div>

</body>
</html>