@model List<Bill>

@{
    ViewBag.Title = "Monthly Bill View";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-white text-gray-900 min-h-screen">

    <partial name="_TopNavbar" />
    <partial name="_SideDrawer" />

    <!-- Main Container -->
    <div class="pt-16">

            <!-- Header -->
            <header class="bg-white border-b border-gray-200 px-8 py-6">
                <div class="flex items-center justify-between">
                    <div>
                        <h1 class="text-4xl font-extrabold text-gray-900">
                            Monthly Bill View
                        </h1>
                        <p class="text-gray-600 mt-2 text-lg">Bills for @ViewBag.MonthName</p>
                    </div>
                </div>
            </header>

            <!-- Page Content -->
            <main class="flex-1 overflow-y-auto p-8">

                <!-- Month Selector -->
                <div class="bg-white rounded-lg shadow-sm p-6 mb-8 border border-gray-200">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Select Month & Year</h3>
                    <form method="get" asp-action="Monthly" class="flex flex-wrap items-center gap-3">
                        <select name="month" class="bg-white border border-gray-300 rounded px-3 py-1.5 text-gray-900 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition">
                            @for (int i = 1; i <= 12; i++)
                            {
                                var monthName = new DateTime(2000, i, 1).ToString("MMMM");
                                @if (ViewBag.SelectedMonth == i)
                                {
                                    <option value="@i" selected>@monthName</option>
                                }
                                else
                                {
                                    <option value="@i">@monthName</option>
                                }
                            }
                        </select>

                        <select name="year" class="bg-white border border-gray-300 rounded px-3 py-1.5 text-gray-900 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition">
                            @for (int y = DateTime.Now.Year; y >= DateTime.Now.Year - 5; y--)
                            {
                                @if (ViewBag.SelectedYear == y)
                                {
                                    <option value="@y" selected>@y</option>
                                }
                                else
                                {
                                    <option value="@y">@y</option>
                                }
                            }
                        </select>

                        <button type="submit" class="bg-blue-600 text-white px-4 py-1.5 rounded text-sm hover:bg-blue-700 transition shadow-sm font-medium flex items-center">
                            <i class="fas fa-search mr-2"></i> View
                        </button>
                    </form>
                </div>

                <!-- Monthly Summary Stats -->
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
                    <div class="bg-blue-50 rounded-lg p-6 shadow-sm border border-blue-200">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-blue-800 text-sm font-medium uppercase">Monthly Total</p>
                                <p class="text-2xl font-semibold mt-1 text-blue-900">Rs @ViewBag.MonthlyTotal.ToString("N2")</p>
                            </div>
                            <svg class="w-10 h-10 text-blue-300" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4zm6 4a2 2 0 100-4 2 2 0 000 4z"/>
                            </svg>
                        </div>
                    </div>

                    <div class="bg-emerald-50 rounded-lg p-6 shadow-sm border border-emerald-200">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-emerald-800 text-sm font-medium uppercase">Paid</p>
                                <p class="text-2xl font-semibold mt-1 text-emerald-900">Rs @ViewBag.MonthlyPaid.ToString("N2")</p>
                            </div>
                            <svg class="w-10 h-10 text-emerald-300" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                            </svg>
                        </div>
                    </div>

                    <div class="bg-red-50 rounded-lg p-6 shadow-sm border border-red-200">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-red-800 text-sm font-medium uppercase">Unpaid</p>
                                <p class="text-2xl font-semibold mt-1 text-red-900">Rs @ViewBag.MonthlyUnpaid.ToString("N2")</p>
                            </div>
                            <svg class="w-10 h-10 text-red-300" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v3.5a1 1 0 102 0V7zm-1 5.5a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"/>
                            </svg>
                        </div>
                    </div>
                </div>

                <!-- Bills Table or Empty State -->
                @if (Model.Count == 0)
                {
                    <div class="bg-white rounded-lg p-12 text-center border border-gray-200 shadow-sm">
                        <i class="fas fa-file-invoice text-4xl text-gray-300 mb-4"></i>
                        <h3 class="text-xl font-semibold text-gray-700 mb-2">No Bills for @ViewBag.MonthName</h3>
                        <p class="text-gray-600 text-sm">Try selecting a different month</p>
                    </div>
                }
                else
                {
                    <div class="bg-white rounded-lg shadow-sm overflow-hidden border border-gray-200">
                        <div class="overflow-x-auto">
                            <table class="min-w-full divide-y divide-gray-200">
                                <thead class="bg-gray-50">
                                    <tr>
                                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase">Date</th>
                                        <th class="px-6 py-4 text-right text-xs font-semibold text-gray-600 uppercase">Amount</th>
                                        <th class="px-6 py-4 text-center text-xs font-semibold text-gray-600 uppercase">Status</th>
                                        <th class="px-6 py-4 text-center text-xs font-semibold text-gray-600 uppercase">Actions</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-gray-200">
                                    @foreach (var bill in Model)
                                    {
                                        <tr class="hover:bg-gray-50 transition-all duration-200">
                                            <td class="px-6 py-4 text-gray-700 text-sm">
                                                @bill.Date.ToString("MMM dd, yyyy")
                                            </td>
                                            <td class="px-6 py-4 text-right text-sm font-medium text-gray-900">
                                                Rs @bill.Amount.ToString("N2")
                                            </td>
                                            <td class="px-6 py-4 text-center">
                                                @if (bill.Paid)
                                                {
                                                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800 border border-green-200">
                                                        <i class="fas fa-check mr-1"></i> Paid
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800 border border-red-200">
                                                        <i class="fas fa-clock mr-1"></i> Unpaid
                                                    </span>
                                                }
                                            </td>
                                            <td class="px-6 py-4 text-center">
                                                <div class="flex justify-center gap-2">
                                                    <a href="@Url.Action("Details", new { id = bill.Id })"
                                                       class="bg-gray-900 text-white px-3 py-1 rounded hover:bg-gray-800 transition text-xs font-medium">
                                                        <i class="fas fa-eye mr-1"></i> View
                                                    </a>
                                                    @if (!bill.Paid)
                                                    {
                                                        <form method="post" asp-controller="Payment" asp-action="CreateCheckoutSession" asp-route-billId="@bill.Id" class="inline">
                                                            <button type="submit"
                                                                    class="bg-green-600 text-white px-3 py-1 rounded hover:bg-green-700 transition text-xs font-medium">
                                                                <i class="fas fa-credit-card mr-1"></i> Pay
                                                            </button>
                                                        </form>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }

             
            </main>

    </div>

</body>
</html>