@model List<Bill>

@{
    ViewBag.Title = "My Bill History";
    var billsByYear = ViewBag.BillsByYear as Dictionary<int, List<Bill>>;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-white text-gray-900 min-h-screen">

    <partial name="_TopNavbar" />
    <partial name="_SideDrawer" />

    <!-- Main Container -->
    <div class="pt-16">

            <!-- Header -->
            <header class="bg-white border-b border-gray-200 px-8 py-6">
                <div class="flex items-center justify-between">
                    <div>
                        <h1 class="text-4xl font-extrabold text-gray-900">
                            My Bill History
                        </h1>
                        <p class="text-gray-600 mt-2 text-lg">View and manage all your billing records</p>
                    </div>
                </div>
            </header>

            <!-- Page Content -->
            <main class="flex-1 overflow-y-auto p-8">

                <!-- Messages -->
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="mb-8 p-6 bg-red-50 border border-red-200 rounded-lg flex items-center gap-4 shadow-sm">
                        <svg class="w-6 h-6 text-red-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                        </svg>
                        <span class="text-red-800 text-lg font-medium">@TempData["ErrorMessage"]</span>
                    </div>
                }

                @if (TempData["InfoMessage"] != null)
                {
                    <div class="mb-8 p-6 bg-blue-50 border border-blue-200 rounded-lg flex items-center gap-4 shadow-sm">
                        <svg class="w-6 h-6 text-blue-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                        </svg>
                        <span class="text-blue-800 text-lg font-medium">@TempData["InfoMessage"]</span>
                    </div>
                }

                <!-- Summary Stats -->
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
                    <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-gray-600 text-sm font-medium">Total Bills</p>
                                <p class="text-2xl font-semibold mt-1 text-gray-900">@ViewBag.TotalBills</p>
                                <p class="text-gray-500 text-xs mt-2">Paid: @ViewBag.PaidBills | Unpaid: @ViewBag.UnpaidBills</p>
                            </div>
                            <svg class="w-10 h-10 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4zm6 4a2 2 0 100-4 2 2 0 000 4z"/>
                            </svg>
                        </div>
                    </div>

                    <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-gray-600 text-sm font-medium">Paid Amount</p>
                                <p class="text-2xl font-semibold mt-1 text-gray-900">Rs @ViewBag.PaidAmount.ToString("N2")</p>
                            </div>
                            <svg class="w-10 h-10 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                            </svg>
                        </div>
                    </div>

                    <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-gray-600 text-sm font-medium">Unpaid Amount</p>
                                <p class="text-2xl font-semibold mt-1 text-gray-900">Rs @ViewBag.UnpaidAmount.ToString("N2")</p>
                            </div>
                            <svg class="w-10 h-10 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v3.5a1 1 0 102 0V7zm-1 5.5a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"/>
                            </svg>
                        </div>
                    </div>
                </div>

                <!-- Filter Buttons -->
                <div class="flex flex-wrap gap-4 mb-10">
                    <a href="@Url.Action("Index")"
                       class="px-6 py-3 bg-gray-900 text-white rounded-xl font-medium text-sm hover:bg-gray-800 transition shadow-md inline-flex items-center">
                        All Bills
                    </a>
                    <a href="@Url.Action("FilterByStatus", new { status = "paid" })"
                       class="px-6 py-3 bg-emerald-600 text-white rounded-xl font-medium text-sm hover:bg-emerald-700 transition shadow-md inline-flex items-center">
                        Paid
                    </a>
                    <a href="@Url.Action("FilterByStatus", new { status = "unpaid" })"
                       class="px-6 py-3 bg-rose-600 text-white rounded-xl font-medium text-sm hover:bg-rose-700 transition shadow-md inline-flex items-center">
                        Unpaid
                    </a>
                    <a href="@Url.Action("Monthly")"
                       class="px-6 py-3 bg-violet-600 text-white rounded-xl font-medium text-sm hover:bg-violet-700 transition shadow-md inline-flex items-center">
                        Monthly
                    </a>
                </div>

                <!-- Bills Grouped by Year -->
                @if (Model.Count == 0)
                {
                    <div class="bg-gray-50 rounded-lg p-16 text-center border border-amber-500/30 shadow-sm">
                        <i class="fas fa-file-invoice text-8xl text-gray-600 mb-8"></i>
                        <h3 class="text-3xl font-bold text-gray-700 mb-4">No Bills Found</h3>
                        <p class="text-gray-600 text-lg">Your billing records will appear here once generated by the admin</p>
                    </div>
                }
                else if (billsByYear != null)
                {
                    @foreach (var yearGroup in billsByYear.OrderByDescending(g => g.Key))
                    {
                        <div class="mb-12">
                            <h3 class="text-3xl font-bold text-gray-900 mb-8">
                                @yearGroup.Key
                            </h3>

                            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                                @foreach (var bill in yearGroup.Value)
                                {
                                    <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
                                        <div class="flex items-start justify-between">
                                            <div>
                                                <p class="text-sm text-gray-500">@bill.Date.ToString("MMM dd, yyyy") • @bill.Date.ToString("MMMM")</p>
                                                <h3 class="text-2xl font-semibold text-gray-900 mt-2">Rs @bill.Amount.ToString("N2")</h3>
                                                <p class="text-gray-600 mt-2 text-sm">Reference: <span class="font-medium text-gray-800">@bill.Id</span></p>
                                            </div>
                                            <div class="text-right">
                                                <p class="text-sm text-gray-400">Status</p>
                                                @if (bill.Paid)
                                                {
                                                    <span class="inline-flex items-center px-3 py-1 rounded-full bg-green-100 text-green-800 font-semibold mt-2">
                                                        <i class="fas fa-check mr-2"></i> Paid
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="inline-flex items-center px-3 py-1 rounded-full bg-red-100 text-red-800 font-semibold mt-2">
                                                        <i class="fas fa-clock mr-2"></i> Unpaid
                                                    </span>
                                                }
                                            </div>
                                        </div>

                                        <div class="mt-4 flex flex-wrap gap-3">
                                            <a href="@Url.Action("Details", new { id = bill.Id })" class="bg-gray-900 text-white px-4 py-2 rounded-md hover:bg-gray-800 transition shadow-sm flex items-center font-medium">
                                                <i class="fas fa-eye mr-2"></i> View
                                            </a>

                                            @if (!bill.Paid)
                                            {
                                                <form method="post" asp-controller="Payment" asp-action="CreateCheckoutSession" asp-route-billId="@bill.Id" class="inline">
                                                    <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700 transition shadow-sm flex items-center font-medium">
                                                        <i class="fas fa-credit-card mr-2"></i> Pay Now
                                                    </button>
                                                </form>
                                            }

                                            <a href="@Url.Action("DownloadInvoice", new { id = bill.Id })" class="bg-purple-600 text-white px-4 py-2 rounded-md hover:bg-purple-700 transition shadow-sm flex items-center font-medium">
                                                <i class="fas fa-file-pdf mr-2"></i> PDF
                                            </a>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                }

                
            </main>

    </div>

</body>
</html>