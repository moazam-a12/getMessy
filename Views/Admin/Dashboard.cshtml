@{
    ViewBag.Title = "Admin Dashboard";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="bg-white text-gray-900 min-h-screen" style="font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;">

    <partial name="_TopNavbar" />
    <partial name="_SideDrawer" />

    <!-- Main Content Area -->
    <div class="pt-16">

            <!-- Header -->
            <header class="bg-white border-b border-gray-200 px-8 py-6">
                <div class="flex items-center justify-between">
                    <div>
                        <h1 class="text-3xl font-semibold text-gray-900">Dashboard</h1>
                        <p class="text-sm text-gray-500 mt-1">Real-time mess management overview</p>
                    </div>
                </div>
            </header>

            <!-- Dashboard Content -->
            <main class="flex-1 overflow-y-auto p-8">

                <!-- Welcome Message -->
                @if (ViewBag.WelcomeMessage != null)
                {
                    <div class="mb-8 p-4 bg-green-50 border border-green-200 text-green-700 rounded-lg flex items-center gap-3">
                        <i class="fas fa-check-circle text-lg"></i>
                        <span class="text-sm font-medium">@ViewBag.WelcomeMessage</span>
                    </div>
                }

                <!-- Stats Cards Grid -->
                <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-6 mb-8">

                    <!-- Total Users Card -->
                    <div class="bg-gray-50 border border-gray-200 rounded-lg p-6 hover:border-gray-300 transition">
                        <p class="text-xs font-medium text-gray-600 uppercase tracking-wide mb-2">Total Users</p>
                        <p class="text-3xl font-semibold text-gray-900 mb-3">@ViewBag.TotalUsers</p>
                        <p class="text-xs text-gray-500">Active members in system</p>
                    </div>

                    <!-- Today's Meal Card -->
                    <div class="bg-gray-50 border border-gray-200 rounded-lg p-6 hover:border-gray-300 transition">
                        <p class="text-xs font-medium text-gray-600 uppercase tracking-wide mb-2">Today's Meal</p>
                        <p class="text-lg font-semibold text-gray-900 mb-3 truncate">@ViewBag.TodayFood</p>
                        <p class="text-xs text-gray-500">Check menu details</p>
                    </div>

                    <!-- Today's Drink Card -->
                    <div class="bg-gray-50 border border-gray-200 rounded-lg p-6 hover:border-gray-300 transition">
                        <p class="text-xs font-medium text-gray-600 uppercase tracking-wide mb-2">Today's Drink</p>
                        <p class="text-lg font-semibold text-gray-900 mb-3 truncate">@ViewBag.TodayDrink</p>
                        <p class="text-xs text-gray-500">Beverage menu item</p>
                    </div>

                    <!-- Today's Attendance Card -->
                    <div class="bg-gray-50 border border-gray-200 rounded-lg p-6 hover:border-gray-300 transition">
                        <p class="text-xs font-medium text-gray-600 uppercase tracking-wide mb-2">Today's Attendance</p>
                        <p class="text-3xl font-semibold text-gray-900 mb-3">@ViewBag.TodayAttendance</p>
                        <p class="text-xs text-gray-500">Present members</p>
                    </div>

                </div>

                <!-- Revenue Cards -->
                <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

                    <div class="bg-green-50 border border-green-200 rounded-lg p-6">
                        <p class="text-xs font-medium text-green-700 uppercase tracking-wide mb-2">Total Paid Revenue</p>
                        <p class="text-3xl font-semibold text-green-900">Rs @ViewBag.TotalRevenue.ToString("N2")</p>
                        <p class="text-xs text-green-600 mt-3"><i class="fas fa-arrow-up mr-1"></i>Paid amount</p>
                    </div>

                    <div class="bg-amber-50 border border-amber-200 rounded-lg p-6">
                        <p class="text-xs font-medium text-amber-700 uppercase tracking-wide mb-2">Pending Amount</p>
                        <p class="text-3xl font-semibold text-amber-900">Rs @ViewBag.PendingRevenue.ToString("N2")</p>
                        <p class="text-xs text-amber-600 mt-3"><i class="fas fa-clock mr-1"></i>Awaiting payment</p>
                    </div>

                    <div class="bg-red-50 border border-red-200 rounded-lg p-6">
                        <p class="text-xs font-medium text-red-700 uppercase tracking-wide mb-2">Unpaid Bills</p>
                        <p class="text-3xl font-semibold text-red-900">@ViewBag.UnpaidBills</p>
                        <p class="text-xs text-red-600 mt-3"><i class="fas fa-exclamation-circle mr-1"></i>Requires action</p>
                    </div>

                </div>

            </main>
        </div>

    </div>

</body>
</html>