@model List<Bill>

@{
    ViewBag.Title = "All Bills";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    animation: {
                        'float': 'float 6s ease-in-out infinite',
                        'pulse-slow': 'pulse 4s cubic-bezier(0.4, 0, 0.6, 1) infinite',
                    },
                    keyframes: {
                        float: {
                            '0%, 100%': { transform: 'translateY(0px)' },
                            '50%': { transform: 'translateY(-20px)' },
                        }
                    }
                }
            }
        }
    </script>

    <script>
        // Populate hidden clientDate inputs from cookie (fallback to browser date)
        (function() {
            try {
                var match = document.cookie.match('(?:^|; )clientDate=([^;]*)');
                var iso = match && match[1] ? decodeURIComponent(match[1]) : new Date().toISOString().split('T')[0];
                var inputs = document.querySelectorAll('input[name="clientDate"]');
                inputs.forEach(function(i) { i.value = iso; });
            } catch (e) { /* ignore */ }
        })();
    </script>
</head>
<body class="bg-white text-gray-900 min-h-screen">

    <partial name="_TopNavbar" />
    <partial name="_SideDrawer" />

    <!-- Main Content Area -->
    <div class="pt-16">

            <!-- Top Header -->
            <header class="bg-white border-b border-gray-200 px-8 py-6">
                <div class="flex items-center justify-between">
                    <div>
                        <h1 class="text-4xl font-extrabold text-gray-900">
                            Billing Management
                        </h1>
                        <p class="text-gray-600 mt-1">View and manage all user bills</p>
                    </div>
                    <form method="post" asp-action="GenerateMonthlyBills" asp-route-period="current" class="inline">
                        <input type="hidden" id="clientDate" name="clientDate" />
                        <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded text-sm hover:bg-blue-700 transition shadow-sm flex items-center font-medium">
                            <i class="fas fa-sync-alt mr-2"></i>
                            Generate Bills
                        </button>
                    </form>
                </div>
            </header>

            <!-- Page Content -->
            <main class="flex-1 overflow-y-auto p-8">

                <!-- Messages -->
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="mb-8 p-6 bg-green-50 border border-green-200 rounded-lg flex items-center gap-4 shadow-sm">
                        <svg class="w-6 h-6 text-green-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                        </svg>
                        <span class="text-green-800 text-lg font-medium">@TempData["SuccessMessage"]</span>
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="mb-8 p-6 bg-red-50 border border-red-200 rounded-lg flex items-center gap-4 shadow-sm">
                        <svg class="w-6 h-6 text-red-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                        </svg>
                        <span class="text-red-800 text-lg font-medium">@TempData["ErrorMessage"]</span>
                    </div>
                }

                <!-- Summary Stats -->
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">

                    <div class="bg-blue-50 rounded-lg p-6 shadow-sm border border-blue-200">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-blue-800 text-sm font-medium uppercase">Grand Total</p>
                                <p class="text-2xl font-semibold mt-1 text-blue-900">Rs @ViewBag.TotalAmount.ToString("N2")</p>
                            </div>
                            <svg class="w-10 h-10 text-blue-300" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4zm6 4a2 2 0 100-4 2 2 0 000 4z"/>
                            </svg>
                        </div>
                    </div>

                    <div class="bg-emerald-50 rounded-lg p-6 shadow-sm border border-emerald-200">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-emerald-800 text-sm font-medium uppercase">Total Paid</p>
                                <p class="text-2xl font-semibold mt-1 text-emerald-900">Rs @ViewBag.PaidAmount.ToString("N2")</p>
                            </div>
                            <svg class="w-10 h-10 text-emerald-300" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                            </svg>
                        </div>
                    </div>

                    <div class="bg-red-50 rounded-lg p-6 shadow-sm border border-red-200">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-red-800 text-sm font-medium uppercase">Total Unpaid</p>
                                <p class="text-2xl font-semibold mt-1 text-red-900">Rs @ViewBag.UnpaidAmount.ToString("N2")</p>
                            </div>
                            <svg class="w-10 h-10 text-red-300" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v3.5a1 1 0 102 0V7zm-1 5.5a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"/>
                            </svg>
                        </div>
                    </div>

                </div>

                <!-- Bills Table or Empty State -->
                @if (Model.Count == 0)
                {
                    <div class="bg-white rounded-lg p-8 text-center border border-gray-200">
                        <i class="fas fa-file-invoice text-3xl text-gray-300 mb-4"></i>
                        <h3 class="text-lg font-semibold text-gray-700 mb-2">No Bills Found</h3>
                        <p class="text-gray-600 text-sm mb-4">Generate monthly bills to populate the list</p>
                        <form method="post" asp-action="GenerateMonthlyBills" class="inline">
                            <input type="hidden" id="clientDate" name="clientDate" />
                            <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition shadow-sm text-sm font-medium">
                                <i class="fas fa-sync-alt mr-2"></i>
                                Generate Bills
                            </button>
                        </form>
                    </div>
                }
                else
                {
                    <div class="bg-white rounded-lg shadow-sm overflow-hidden border border-gray-200">
                        <div class="overflow-x-auto">
                            <table class="min-w-full divide-y divide-gray-200">
                                <thead class="bg-gray-50">
                                    <tr>
                                        <th class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase">User</th>
                                        <th class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase">Date</th>
                                        <th class="px-4 py-3 text-right text-xs font-semibold text-gray-600 uppercase">Amount</th>
                                        <th class="px-4 py-3 text-center text-xs font-semibold text-gray-600 uppercase">Status</th>
                                        <th class="px-4 py-3 text-center text-xs font-semibold text-gray-600 uppercase">Actions</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-gray-200 text-sm">
                                    @foreach (var bill in Model)
                                    {
                                        <tr class="hover:bg-gray-50 transition-all duration-200" data-bill-id="@bill.Id">
                                            <td class="px-4 py-3">
                                                <div>
                                                    <p class="font-medium text-gray-900">@bill.User.FullName</p>
                                                    <p class="text-xs text-gray-600">@bill.User.Email</p>
                                                </div>
                                            </td>
                                            <td class="px-4 py-3 text-gray-700">
                                                @bill.Date.ToString("MMM dd")
                                            </td>
                                            <td class="px-4 py-3 text-right font-medium text-gray-900">
                                                Rs @bill.Amount.ToString("N2")
                                            </td>
                                            <td class="px-4 py-3 text-center">
                                                @if (bill.Paid)
                                                {
                                                    <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-green-100 text-green-800">
                                                        <i class="fas fa-check mr-1"></i> Paid
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-red-100 text-red-800">
                                                        <i class="fas fa-times mr-1"></i> Unpaid
                                                    </span>
                                                }
                                            </td>
                                            <td class="px-4 py-3 text-center">
                                                <div class="flex justify-center gap-2">
                                                    @if (!bill.Paid)
                                                    {
                                                        <button onclick="markPaid(@bill.Id)"
                                                                class="bg-green-600 text-white px-3 py-1 rounded hover:bg-green-700 transition text-xs font-medium">
                                                            Mark Paid
                                                        </button>
                                                    }
                                                    else
                                                    {
                                                        <button onclick="markUnpaid(@bill.Id)"
                                                                class="bg-amber-600 text-white px-3 py-1 rounded hover:bg-amber-700 transition text-xs font-medium">
                                                            Mark Unpaid
                                                        </button>
                                                    }
                                                    <button onclick="deleteBill(@bill.Id)"
                                                            class="bg-red-600 text-white px-3 py-1 rounded hover:bg-red-700 transition text-xs font-medium">
                                                        Delete
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }

            </main>
        </div>
    </div>

    <!-- AJAX Scripts (Same functionality, updated styling for notifications) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function markPaid(billId) {
            if (!confirm('Mark this bill as paid?')) return;

            $.ajax({
                url: '/Admin/MarkPaid',
                type: 'POST',
                data: { billId: billId },
                success: function(response) {
                    if (response.success) {
                        showNotification('Success', response.message, 'success');
                        updateBillStatus(billId, true);
                    } else {
                        showNotification('Error', response.message, 'error');
                    }
                },
                error: function() {
                    showNotification('Error', 'Failed to update bill status', 'error');
                }
            });
        }

        function markUnpaid(billId) {
            if (!confirm('Mark this bill as unpaid?')) return;

            $.ajax({
                url: '/Admin/MarkUnpaid',
                type: 'POST',
                data: { billId: billId },
                success: function(response) {
                    if (response.success) {
                        showNotification('Success', response.message, 'success');
                        updateBillStatus(billId, false);
                    } else {
                        showNotification('Error', response.message, 'error');
                    }
                },
                error: function() {
                    showNotification('Error', 'Failed to update bill status', 'error');
                }
            });
        }

        function deleteBill(billId) {
            if (!confirm('Are you sure you want to delete this bill? This action cannot be undone.')) return;

            $.ajax({
                url: '/Admin/DeleteBill',
                type: 'POST',
                data: { billId: billId },
                success: function(response) {
                    if (response.success) {
                        showNotification('Success', response.message, 'success');
                        $('tr[data-bill-id="' + billId + '"]').fadeOut(500, function() { $(this).remove(); });
                    } else {
                        showNotification('Error', response.message, 'error');
                    }
                },
                error: function() {
                    showNotification('Error', 'Failed to delete bill', 'error');
                }
            });
        }

        function updateBillStatus(billId, isPaid) {
            var row = $('tr[data-bill-id="' + billId + '"]');
            var badge = row.find('td:nth-child(4) span');
            var actions = row.find('td:last-child div');

                if (isPaid) {
                badge.removeClass('bg-red-50 text-rose-300 border-rose-500/50')
                     .addClass('bg-emerald-100 text-emerald-800 border-emerald-200')
                     .html('<i class="fas fa-check mr-1"></i> Paid');

                actions.html(`
                    <button onclick="markUnpaid(${billId})"
                            class="bg-amber-600 text-white px-3 py-1 rounded hover:bg-amber-700 transition text-xs font-medium inline-flex items-center">
                        <i class="fas fa-undo mr-2"></i> Mark Unpaid
                    </button>
                    <button onclick="deleteBill(${billId})"
                            class="bg-red-600 text-white px-3 py-1 rounded hover:bg-red-700 transition text-xs font-medium inline-flex items-center">
                        <i class="fas fa-trash mr-2"></i> Delete
                    </button>
                `);
            } else {
                badge.removeClass('bg-emerald-100 text-emerald-800 border-emerald-200')
                     .addClass('bg-red-100 text-red-800 border-red-200')
                     .html('<i class="fas fa-times mr-1"></i> Unpaid');

                actions.html(`
                    <button onclick="markPaid(${billId})"
                            class="bg-green-600 text-white px-3 py-1 rounded hover:bg-green-700 transition text-xs font-medium inline-flex items-center">
                        <i class="fas fa-check mr-2"></i> Mark Paid
                    </button>
                    <button onclick="deleteBill(${billId})"
                            class="bg-red-600 text-white px-3 py-1 rounded hover:bg-red-700 transition text-xs font-medium inline-flex items-center">
                        <i class="fas fa-trash mr-2"></i> Delete
                    </button>
                `);
            }
        }

        function showNotification(title, message, type) {
            var bgGradient = type === 'success' 
                ? 'bg-green-600' 
                : 'bg-red-600';

            var notification = $(`
                <div class="fixed top-8 right-8 bg-gradient-to-r ${bgGradient} text-white px-8 py-6 rounded-lg shadow-sm z-50 max-w-sm animate-slide-in">
                    <p class="text-2xl font-bold mb-2">${title}</p>
                    <p class="text-lg">${message}</p>
                </div>
            `);

            $('body').append(notification);

            setTimeout(() => {
                notification.fadeOut(500, function() { $(this).remove(); });
            }, 4000);
        }
    </script>

    <style>
        @@keyframes slide-in {
            from { transform: translateX(100%); opacity: 0; }
            to { transform: translateX(0); opacity: 1; }
        }
        .animate-slide-in { animation: slide-in 0.4s ease-out; }
    </style>

</body>
</html>