@model List<Menu>

@{
    ViewBag.Title = "Menu Management";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    animation: {
                        'float': 'float 6s ease-in-out infinite',
                    },
                    keyframes: {
                        float: {
                            '0%, 100%': { transform: 'translateY(0px)' },
                            '50%': { transform: 'translateY(-20px)' },
                        }
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-white text-gray-900 min-h-screen">

    <!-- Main Container -->
    <div class="flex h-screen overflow-hidden">

        <partial name="_TopNavbar" />
        <partial name="_SideDrawer" />

        <!-- Main Content Area -->
        <div class="flex-1 flex flex-col overflow-hidden pt-20">

                <!-- Main Content -->
                <div class="flex-1 flex flex-col overflow-hidden">

            <!-- Header -->
            <header class="bg-white border-b border-gray-200 px-8 py-6">
                <div class="flex items-center justify-between">
                    <div>
                        <h1 class="text-4xl font-extrabold text-gray-900">
                            Menu Management
                        </h1>
                        <p class="text-gray-600 mt-2 text-lg">View and manage all menu items</p>
                    </div>
                    <a href="/AdminMenu/Add" class="bg-blue-600 text-white px-4 py-2 rounded text-sm hover:bg-blue-700 transition shadow-sm flex items-center font-medium">
                        <i class="fas fa-plus mr-2"></i>
                        Add Item
                    </a>
                </div>
            </header>

            <!-- Page Content -->
            <main class="flex-1 overflow-y-auto p-8">

                <!-- Messages -->
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="mb-8 p-6 bg-gradient-to-r bg-green-50 border border-green-500/30 rounded-lg flex items-center shadow-sm">
                        <i class="fas fa-check-circle text-green-600 text-4xl mr-6"></i>
                        <span class="text-green-800 text-xl font-medium">@TempData["SuccessMessage"]</span>
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="mb-8 p-6 bg-gradient-to-r bg-red-50 border border-red-500/30 rounded-lg flex items-center shadow-sm">
                        <i class="fas fa-exclamation-circle text-red-400 text-4xl mr-6"></i>
                        <span class="text-red-700 text-xl font-medium">@TempData["ErrorMessage"]</span>
                    </div>
                }

                <!-- Empty State -->
                @if (Model.Count == 0)
                {
                    <div class="bg-gray-50 rounded-lg p-16 text-center border border-amber-500/30 shadow-sm">
                        <i class="fas fa-utensils text-8xl text-gray-600 mb-8"></i>
                        <h3 class="text-3xl font-bold text-gray-700 mb-4">No Menu Items Found</h3>
                        <p class="text-gray-600 text-lg mb-8">Start by adding your first menu item</p>
                        <a href="/AdminMenu/Add" class="bg-gradient-to-r bg-amber-600 text-white px-10 py-5 rounded-lg hover:bg-amber-700 transition shadow-sm text-xl font-medium inline-flex items-center">
                            <i class="fas fa-plus mr-3"></i>
                            Add First Menu Item
                        </a>
                    </div>
                }
                else
                {
                    <!-- Summary Stats -->
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
                        <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-gray-600 text-sm font-medium">Total Items</p>
                                    <p class="text-2xl font-semibold mt-1 text-gray-900">@Model.Count</p>
                                </div>
                                <svg class="w-10 h-10 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4zm6 4a2 2 0 100-4 2 2 0 000 4z"/>
                                </svg>
                            </div>
                        </div>

                        <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-gray-600 text-sm font-medium">Food Items</p>
                                    <p class="text-2xl font-semibold mt-1 text-gray-900">@Model.Count(m => m.IsFood)</p>
                                </div>
                                <svg class="w-10 h-10 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2H3V4zm0 4h14v9a2 2 0 01-2 2H5a2 2 0 01-2-2V8z"/>
                                </svg>
                            </div>
                        </div>

                        <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-gray-600 text-sm font-medium">Drink Items</p>
                                    <p class="text-2xl font-semibold mt-1 text-gray-900">@Model.Count(m => !m.IsFood)</p>
                                </div>
                                <svg class="w-10 h-10 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M4.5 1a1.5 1.5 0 00-1.5 1.5v2c0 1.294.834 2.403 2 2.816V16.5a1.5 1.5 0 003 0V8.316c1.166-.413 2-1.522 2-2.816v-2A1.5 1.5 0 005.5 1h-1z"/>
                                </svg>
                            </div>
                        </div>
                    </div>

                    <!-- Menu Table -->
                    <div class="bg-gray-50 rounded-lg shadow-sm overflow-hidden border border-gray-200">
                        <div class="overflow-x-auto">
                            <table class="min-w-full divide-y divide-gray-200">
                                <thead class="bg-gray-100">
                                    <tr>
                                        <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Name</th>
                                        <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Price</th>
                                        <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Date</th>
                                        <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Type</th>
                                        <th class="px-4 py-3 text-center text-xs font-semibold text-gray-700 uppercase">Actions</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-gray-200">
                                    @foreach (var item in Model)
                                    {
                                        <tr class="hover:bg-gray-100 transition-all duration-200">
                                            <td class="px-4 py-3">
                                                <span class="font-medium text-sm text-gray-900">@item.Name</span>
                                            </td>
                                            <td class="px-4 py-3">
                                                <span class="text-sm font-medium text-gray-900">Rs @item.Price.ToString("N2")</span>
                                            </td>
                                            <td class="px-4 py-3 text-sm text-gray-700">
                                                @item.Date.ToString("MMM dd, yyyy")
                                            </td>
                                            <td class="px-4 py-3">
                                                @if (item.IsFood)
                                                {
                                                    <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-amber-100 text-amber-800">
                                                        <i class="fas fa-hamburger mr-1"></i> Food
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-green-100 text-green-800">
                                                        <i class="fas fa-mug-hot mr-1"></i> Drink
                                                    </span>
                                                }
                                            </td>
                                            <td class="px-4 py-3 text-center">
                                                <div class="flex justify-center gap-2">
                                                    <a href="/AdminMenu/Edit/@item.Id"
                                                       class="bg-gray-900 text-white px-3 py-1 rounded text-xs hover:bg-gray-800 transition shadow-sm flex items-center font-medium">
                                                        <i class="fas fa-edit mr-1"></i> Edit
                                                    </a>
                                                    <a href="/AdminMenu/Delete/@item.Id"
                                                       onclick="return confirm('Are you sure?')"
                                                       class="bg-red-600 text-white px-3 py-1 rounded text-xs hover:bg-red-700 transition shadow-sm flex items-center font-medium">
                                                        <i class="fas fa-trash mr-1"></i> Delete
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }

            </main>
        </div>
    </div>

</body>
</html>