@model List<User>

@{
    ViewBag.Title = "Manage Users";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    animation: {
                        'float': 'float 6s ease-in-out infinite',
                    },
                    keyframes: {
                        float: {
                            '0%, 100%': { transform: 'translateY(0px)' },
                            '50%': { transform: 'translateY(-20px)' },
                        }
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-white text-gray-900 min-h-screen" style="font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;">

    <partial name="_TopNavbar" />
    <partial name="_SideDrawer" />

    <!-- Main Content -->
    <div class="pt-16">

            <!-- Header -->
            <header class="bg-white border-b border-gray-200 px-8 py-6">
                <div class="flex items-center justify-between">
                    <div>
                        <h1 class="text-4xl font-extrabold text-gray-900">
                            User Management
                        </h1>
                        <p class="text-gray-500 mt-2 text-lg">View and manage all registered users</p>
                    </div>
                </div>
            </header>

            <!-- Page Content -->
            <main class="flex-1 overflow-y-auto p-8">

                <!-- Messages -->
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="mb-8 p-6 bg-green-50 border border-green-200 rounded-2xl flex items-center shadow-sm">
                        <i class="fas fa-check-circle text-green-600 text-4xl mr-6"></i>
                        <span class="text-green-700 text-xl font-medium">@TempData["SuccessMessage"]</span>
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="mb-8 p-6 bg-red-50 border border-red-200 rounded-2xl flex items-center shadow-sm">
                        <i class="fas fa-exclamation-circle text-red-600 text-4xl mr-6"></i>
                        <span class="text-red-700 text-xl font-medium">@TempData["ErrorMessage"]</span>
                    </div>
                }

                <!-- Empty State -->
                @if (Model.Count == 0)
                {
                    <div class="bg-gray-50 rounded-2xl p-16 text-center border border-gray-200 shadow-sm">
                        <i class="fas fa-users text-8xl text-gray-300 mb-8"></i>
                        <h3 class="text-3xl font-bold text-gray-700 mb-4">No Users Found</h3>
                        <p class="text-gray-500 text-lg">Users will appear here after they register</p>
                    </div>
                }
                else
                {
                    <!-- Summary Stats -->
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
                        <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-gray-600 text-sm font-medium">Total Users</p>
                                    <p class="text-2xl font-semibold mt-1 text-gray-900">@Model.Count</p>
                                </div>
                                <svg class="w-10 h-10 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM9 6a3 3 0 11-6 0 3 3 0 016 0zM9 10a3 3 0 11-6 0 3 3 0 016 0zm5.5-1a2.5 2.5 0 100-5 2.5 2.5 0 000 5zM18 16a4 4 0 00-8 0v2h8v-2z"/>
                                </svg>
                            </div>
                        </div>

                        <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-gray-600 text-sm font-medium">Admins</p>
                                    <p class="text-2xl font-semibold mt-1 text-gray-900">@Model.Count(u => u.Role.ToLower() == "admin")</p>
                                </div>
                                <svg class="w-10 h-10 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M18 5v8a2 2 0 01-2 2h-5l-5 4v-4H4a2 2 0 01-2-2V5a2 2 0 012-2h12a2 2 0 012 2z"/>
                                </svg>
                            </div>
                        </div>

                        <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-gray-600 text-sm font-medium">Regular Users</p>
                                    <p class="text-2xl font-semibold mt-1 text-gray-900">@Model.Count(u => u.Role.ToLower() == "user")</p>
                                </div>
                                <svg class="w-10 h-10 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"/>
                                </svg>
                            </div>
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                        @foreach (var user in Model)
                        {
                            <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-200">
                                <div class="flex items-start justify-between">
                                    <div>
                                        <p class="text-xl font-semibold text-gray-900">@user.FullName</p>
                                        <p class="text-sm text-gray-500 mt-1">@user.Email</p>
                                        <p class="text-xs text-gray-400 mt-1">ID: @user.Id</p>
                                    </div>
                                    <div>
                                        @if (user.Role.ToLower() == "admin")
                                        {
                                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-semibold bg-amber-100 text-amber-800 border border-amber-300">
                                                <i class="fas fa-crown mr-2"></i> Admin
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-semibold bg-gray-100 text-gray-700 border border-gray-300">
                                                <i class="fas fa-user mr-2"></i> User
                                            </span>
                                        }
                                    </div>
                                </div>

                                <div class="mt-4 flex flex-wrap gap-3">
                                    @if (user.Drink)
                                    {
                                        <span class="inline-flex items-center px-3 py-1 rounded-md text-sm font-medium bg-gray-50 text-gray-700 border border-gray-200">
                                            <i class="fas fa-mug-hot mr-2"></i> Drink
                                        </span>
                                    }
                                    @if (user.Lunch)
                                    {
                                        <span class="inline-flex items-center px-3 py-1 rounded-md text-sm font-medium bg-gray-50 text-gray-700 border border-gray-200">
                                            <i class="fas fa-utensils mr-2"></i> Lunch
                                        </span>
                                    }
                                </div>

                                <div class="mt-6 flex justify-end space-x-3">
                                    <a href="/AdminUser/Edit/@user.Id" class="bg-gray-900 text-white px-4 py-2 rounded-md hover:bg-gray-800 transition shadow-sm flex items-center font-medium">
                                        <i class="fas fa-edit mr-2"></i> Edit
                                    </a>
                                    <form method="post" asp-action="Delete" asp-route-id="@user.Id" class="inline">
                                        <button type="submit" onclick="return confirm('Are you sure you want to delete @user.FullName?')" class="bg-red-600 text-white px-4 py-2 rounded-md hover:bg-red-700 transition shadow-sm flex items-center font-medium">
                                            <i class="fas fa-trash mr-2"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        }
                    </div>
                }

            </main>
        </div>

    </div>

</body>
</html>